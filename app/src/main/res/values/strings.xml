    <!-- Sample Exercise Names -->
    <string name="exercise_knee_bend_title">Knee Bends</string>
    <string name="exercise_knee_bend_desc">Gentle knee bending exercise to improve flexibility</string>
    <string name="exercise_knee_bend_instructions">Stand straight, slowly bend your knee to 90 degrees, hold for 2 seconds, then straighten. Keep your back straight throughout.</string>

    <string name="exercise_leg_raise_title">Straight Leg Raises</string>
    <string name="exercise_leg_raise_desc">Strengthen quadriceps without bending the knee</string>
    <string name="exercise_leg_raise_instructions">Lie on your back, keep one leg bent and the other straight. Lift the straight leg 12 inches, hold for 3 seconds, lower slowly.</string>

    <string name="exercise_heel_slide_title">Heel Slides</string>
    <string name="exercise_heel_slide_desc">Improve knee range of motion</string>
    <string name="exercise_heel_slide_instructions">Lie on your back, slowly slide your heel toward your buttocks, bending the knee. Hold for 5 seconds, then straighten.</string>

    <string name="exercise_quad_sets_title">Quadriceps Sets</string>
    <string name="exercise_quad_sets_desc">Strengthen thigh muscles without movement</string>
    <string name="exercise_quad_sets_instructions">Lie down with legs straight. Tighten your thigh muscle, pushing the back of your knee down. Hold for 5 seconds, then relax.</string>

    <string name="exercise_ankle_pumps_title">Ankle Pumps</string>
    <string name="exercise_ankle_pumps_desc">Improve circulation and prevent blood clots</string>
    <string name="exercise_ankle_pumps_instructions">Move your foot up and down at the ankle joint. Perform slowly and steadily for the full range of motion.</string>

